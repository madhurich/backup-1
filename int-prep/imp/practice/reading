var xhttp = new XMLHttpRequest();
xhttp.onreadystatechange = function(){
	if(this.readyState == 4 && this.status == 200){
		//do something
	}
	xhttp.open('GET', 'filename.extn', true);
	xhttp.send();

	DONOT put false, else it will immediately be executed without
	checking the server response is ready or not.
}
